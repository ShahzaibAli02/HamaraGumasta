<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".Activities.BusinessNature">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"
                android:onClick="onClickBack"
                />

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:src="@drawable/logo"
                />


        </LinearLayout>







        <TextView

            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:textSize="25dp"
            android:text="Nature of the Business"
            />


        <EditText
            android:id="@+id/editTextBusNature"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/back_white"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:padding="10dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Business Nature"

            android:gravity="top|start"
            android:paddingStart="10dp"
            android:textSize="12dp"
            android:textColor="@color/black"

            />


        <TextView

            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:textSize="30dp"
            android:text="When are you Planning"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"

            >
            <CheckBox
                android:id="@+id/checkboxImmediately"
                android:layout_width="39dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/checkbox_selector_2"
                android:button="@null"
                />

            <TextView
                android:id="@+id/txtImmediatley"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:gravity="center|start"
                android:textSize="18dp"
                android:onClick="onClickTextPlanning"
                android:fontFamily="@font/roboto_regular"
                android:text="Immediately"
                android:textColor="@color/black"
                android:layout_height="50dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"

            >
            <CheckBox
                android:id="@+id/checkboxlt30"
                android:layout_width="39dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/checkbox_selector_2"
                android:button="@null"
                />

            <TextView
                android:id="@+id/txtLT30"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:gravity="center|start"
                android:textSize="18dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Less than 30 days"
                android:textColor="@color/black"
                android:onClick="onClickTextPlanning"
                android:layout_height="50dp"/>


        </LinearLayout>






        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="40dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="40dp"
            android:onClick="onClickSubmit"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/back_blue"
            />

    </LinearLayout>
</ScrollView>