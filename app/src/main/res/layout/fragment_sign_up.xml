<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="80dp"
        >


        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18dp"
            android:textColor="#555454"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:text="Name"
            />



        <EditText
            android:id="@+id/editTextName"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/back_default"
            android:hint="Madhu"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:paddingStart="10dp"
            />



        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18dp"
            android:textColor="#555454"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:text="Email"
            />



        <EditText
            android:id="@+id/editTextEmail"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/back_default"
            android:hint="someone@gmail.com"
            android:inputType="textEmailAddress"
            android:gravity="center"
            android:paddingStart="10dp"
            />




        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18dp"
            android:textColor="#555454"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:text="Phone Number"
            />





        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/back_default"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            >



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="start|center"
                    app:ccp_textSize="15dp"
                    app:ccp_showFlag="false"
                    app:ccp_showNameCode="false"
                    app:ccp_autoFormatNumber="true"
                    app:ccp_countryPreference="US,IN,NZ"  />
                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/back_default"
                    android:layout_height="50dp"
                    android:hint="+00000000"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    />

            </LinearLayout>


        </LinearLayout>




        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18dp"
            android:textColor="#555454"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:text="Password"
            />



        <EditText
            android:id="@+id/editTextPass"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/back_default"
            android:hint="********"
            android:inputType="textPassword"
            android:gravity="center"
            android:paddingStart="10dp"
            />



        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18dp"
            android:textColor="#555454"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:text="Confirm Password"
            />



        <EditText
            android:id="@+id/editTextConfPass"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/back_default"
            android:hint="********"
            android:inputType="textPassword"
            android:gravity="center"
            android:paddingStart="10dp"
            />




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_marginTop="40dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:fontFamily="@font/roboto_regular"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/back_blue"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have account "
                />

            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:textColor="@color/blue"
                android:layout_height="wrap_content"
                android:text="Login"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>