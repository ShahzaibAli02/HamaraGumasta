<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".Activities.Authentications.OtpVerification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_back"
                android:onClick="onClickBack"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textStyle="bold"

                android:fontFamily="@font/roboto_regular"
                android:textSize="20dp"
                android:text="Verify Phone Number"
                />


        </LinearLayout>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_msgcircle"
            android:layout_marginTop="50dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:textSize="20dp"

            android:textColor="#4E4E4E"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="Please enter 4 digits code send to"
            />
        <TextView
            android:id="@+id/txtphonenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/roboto_bolditalic"
            android:textSize="20dp"
            android:textColor="#4E4E4E"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="+00000"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"

            >

            <EditText
                android:id="@+id/firstDigit"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="number"
                android:background="@drawable/back_white_stroke"
                />


            <EditText
                android:id="@+id/secondDigit"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="number"
                android:background="@drawable/back_white_stroke"
                android:layout_marginLeft="10dp" />


            <EditText
                android:id="@+id/thirdDigit"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:maxLength="1"
                android:background="@drawable/back_white_stroke"
                />

            <EditText
                android:id="@+id/fourthDigit"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_white_stroke"
                />
            <EditText
                android:id="@+id/fivthDigit"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_white_stroke"
                />
            <EditText
                android:id="@+id/sixthDigit"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_white_stroke"
                />


        </LinearLayout>


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:textSize="20dp"
            android:textColor="#4E4E4E"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="I didn't received code"
            />


        <TextView
            android:id="@+id/textResendCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="RESEND"
            android:textStyle="bold"
            android:textColor="@color/blue"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="40dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:fontFamily="@font/roboto_regular"
            android:onClick="onClickVerify"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/back_blue"
            android:layout_marginBottom="40dp"
            />

    </LinearLayout>
</ScrollView>